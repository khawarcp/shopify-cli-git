<section class="product-detail-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div id="big" class="owl-carousel">
                  {% for media in product.images %}
                <div class="item">
                    
                    <div class="product-slider-img">
                        <img src="{{ media | img_url: 'original' }}" alt="product-slider-img1">
                    </div>
                    
                </div>
                {% endfor %}  
                </div>
                <div id="thumbs" class="owl-carousel">
                  {% for media in product.images %}
                  <div class="item">
                      
                      <div class="product-slider-img">
                          <img src="{{ media | img_url: 'original' }}" alt="product-slider-img1">
                      </div>
                      
                  </div>
                  {% endfor %}  
                </div>

            </div>
            <div class="col-md-6">
                <div class="product-detail-text">
                    <h3> {{ product.title }} </h3>
                    <h4>
                      {% if product.compare_at_price > product.price %}
                        <div class="product-sale__price">
                          {{ product.price | money }} <s> {{ product.compare_at_price | money }} </s>
                        </div>
                      {% elsif product.price_varies %}
                        <div class="product-varies__price">
                          From {{ product.price_min | money }} to {{ product.price_max | money }}
                        </div>
                      {% else %}
                        <div class="product-regular__price">
                            {{ product.price | money }}
                        </div>
                      {% endif %}                     
                    </h4>
                    <form>
                        <div class="size-color-quantity">
                            <label>Size:</label>
                            <select>
                                <option>Pick a Size</option>
                            </select>
                        </div>
                        <div class="size-color-quantity">
                            <label>Color:</label>
                            <select>
                                <option>Pick a Color</option>
                            </select>
                        </div>
                        <div class="size-color-quantity">
                            <label>Quantity:</label>
                            <select>
                                <option>Select Quantity</option>
                            </select>
                        </div>
                    </form>
                    <p class="product-description">
                        This Spectacular 3000 Gram Flokati Rug Is Our Most Popular Weight | Super Thick 3.25" Natural Wool Pile | Thicker Wool Backing | Perfect For All Wood, Ceramic And Concrete Floors | Available In Popular Sizes And Colors | Free Shipping Within The Continental USA.
                    </p>
                    <button>Add To Cart</button>
                </div>
            </div>
        </div>
    </div>
