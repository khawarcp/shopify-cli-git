<header>
    <div class="header-top">
        <div class="container">
            <div class="header-top-flex">
                <div class="h-social-icons">
                    <ul>
                        <li>
                            <a href="{{ settings.social_facebook_link }}"><img src="{{ 'facebook.svg' | asset_img_url: 'master'}}" alt="facebook"></a>
                            {{ 'logo.png' | asset_img_url: 'master' | img_tag }}                    
                        </li>
                        <li><a href="{{ settings.social_twitter_link }}"><img src="{{ 'twitter.svg' | asset_img_url: 'master'}}" alt="twitter"></a></li>
                        <li><a href="{{ settings.social_instagram_link }}"><img src="{{ 'instagram.svg' | asset_img_url: 'master'}}" alt="instagram"></a></li>
                    </ul>
                </div>
                <div class="h-top-links">
                    <ul>
                        <li><a href="#">Search</a></li>
                        <li><a href="#">Register</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="header-bottom-flex">
                <nav>
                    <ul class="left-menu">
                        {% for link in linklists[section.settings.main_menu].links %}                            
                            <li class="{% if link.active %}active{% endif %}"><a href="{{ link.url }}"> {{ link.title}} </a></li>
                        {% endfor %}
                    </ul>
                    <ul class="right-menu">
                        <li>
                            <a href="tel:(800) 844-5345"><span class="phone-icon"><img src="assets/images/phone-icon.svg"
                                        alt="phone-icon"></span>
                                <div class="call-us">
                                    <h5>Call Us</h5>
                                    <h3>(800) 844-5345</h3>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <h5>Cart</h5>
                                <span class="cart-icon"><img src="assets/images/cart-icon.svg" alt="cart-icon"><span
                                        class="cart-counter">2</span></span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="logo">
                    <a href="{{ routes.root_url }}"><img src="{{ section.settings.logo | img_url: 'original' }}" alt="logo"></a>
                </div>
                <div class="menu-bar d-none">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</header>

{% schema %}
{
    "name" : "Header",
    "settings":
    [
       {
           "type": "image_picker",
           "id": "logo",
           "label": "Logo"
       },
      {
          "type": "link_list",
          "id": "main_menu",
          "label": "Main Menu"
      }
    ]
}
{% endschema %}