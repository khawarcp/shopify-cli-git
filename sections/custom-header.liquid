<header>
    <div class="header-top">
        <div class="container">
            <div class="header-top-flex">
                <div class="h-social-icons">
                    <ul>
                        <li>
                            <a href="{{ settings.social_facebook_link }}"><img src="{{ 'facebook.svg' | asset_img_url: 'original'}}" alt="facebook"></a>                        
                        </li>
                        <li><a href="{{ settings.social_twitter_link }}"><img src="assets/images/twitter.svg" alt="twitter"></a></li>
                        <li><a href="{{ settings.social_instagram_link }}"><img src="assets/images/instagram.svg" alt="instagram"></a></li>
                    </ul>
                </div>
                <div class="h-top-links">
                    <ul>
                        <li><a href="#">Search</a></li>
                        <li><a href="#">Register</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="header-bottom-flex">
                <nav>
                    <ul class="left-menu">
                        <li class="active"><a href="#">Home</a></li>
                        <li class="has-menu"><a href="#">Our Awesome Rugs</a>
                            <ul class="submenu">
                                <li><a href="#">Flokati Rectangle</a></li>
                                <li><a href="#">Flokati Round</a></li>
                                <li><a href="#">Flokati Square</a></li>
                                <li><a href="#">Sheep Skin Shapes</a></li>
                                <li><a href="#">Flokati Short Hair</a></li>
                                <li><a href="#">Flokati Pillows</a></li>
                                <li><a href="#">Flokati Runners</a></li>
                                <li><a href="#">Clearance</a></li>
                                <li><a href="gallery.html">Gallery</a></li>
                            </ul>
                        </li>
                        <li class="has-menu"><a href="#">My Account</a></li>
                    </ul>
                    <ul class="right-menu">
                        <li>
                            <a href="#"><span class="phone-icon"><img src="assets/images/phone-icon.svg"
                                        alt="phone-icon"></span>
                                <div class="call-us">
                                    <h5>Call Us</h5>
                                    <h3>(800) 844-5345</h3>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <h5>Cart</h5>
                                <span class="cart-icon"><img src="assets/images/cart-icon.svg" alt="cart-icon"><span
                                        class="cart-counter">2</span></span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="logo">
                    <a href="index.html"><img src="assets/images/footer-logo.png" alt="logo"></a>
                </div>
                <div class="menu-bar d-none">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</header>

{% schema %}
{
    "name" : "Header",
    "settings":
    [
       {
           "type": "image_picker",
           "id": "logo",
           "label": "Logo"
       },
      {
          "type": "link_list",
          "id": "main_menu",
          "label": "Main Menu"
      }
    ]
}
{% endschema %}